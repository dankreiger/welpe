{
  "name": "welpe",
  "private": true,
  "license": "BSD-2-Clause",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "scripty",
    "clean": "scripty",
    "postinstall": "scripty",
    "lint": "scripty",
    "nuke": "scripty",
    "prod-publish": "scripty",
    "proxy-registry": "scripty",
    "sort": "scripty",
    "storybook": "scripty",
    "storybook:build": "build-storybook",
    "test": "scripty",
    "test-publish": "scripty"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/**/src/*.{js,ts,tsx,jsx,json,css}": [
      "yarn sort && prettier --single-quote --write"
    ],
    "*.{md,mdx}": [
      "yarn sort && prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.12.16",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/config-lerna-scopes": "11.0.0",
    "@dankreiger/theme": "0.0.16",
    "@storybook/addon-actions": "6.1.21",
    "@storybook/addon-essentials": "6.1.21",
    "@storybook/addon-links": "6.1.21",
    "@storybook/react": "6.1.21",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "babel-loader": "8.2.2",
    "commitlint": "11.0.0",
    "eslint": "7.20.0",
    "husky": "4.3.8",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rimraf": "3.0.2",
    "scripty": "2.0.0",
    "sort-package-json": "1.48.1",
    "styled-components": "5.2.1",
    "typescript": "4.1.5"
  },
  "engines": {
    "node": ">=14.15",
    "yarn": ">=1.22"
  },
  "scripty": {
    "path": "./scripts/workspaces"
  }
}